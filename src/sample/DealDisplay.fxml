                     <children>
                        <TextField fx:id="txtEstabName" editable="false" layoutX="-37.0" layoutY="-6.0" prefHeight="37.0" prefWidth="147.0" promptText="Establishment" scaleX="2.0" scaleY="2.0" style="-fx-border-color: #9fe1b1; -fx-border-width: 3px;" text="Drapers" translateX="125.0" translateY="50.0" />
                        <ImageView fx:id="imgEstabLogo" fitHeight="100.0" fitWidth="100.0" layoutX="-187.0" layoutY="-11.0" pickOnBounds="true" preserveRatio="true" x="500.0" y="25.0">
                           <image>
                              <Image url="@../images/stock-vector-example-stamp-424524877.jpg" />
                           </image>
                        </ImageView>
                        <Label layoutX="313.0" layoutY="109.0" text="Logo of Estb" />
                        <TextField fx:id="activeDealLink" editable="false" layoutX="62.0" layoutY="415.0" minHeight="30.0" minWidth="300.0" text="Active Promotions/Discounts" />
                        <TextFlow layoutX="9.0" layoutY="154.0" prefHeight="243.0" prefWidth="403.0">
                           <children>
                              <TextField fx:id="txtEstabDesc" editable="false" minHeight="140.0" minWidth="401.0" prefHeight="140.0" prefWidth="401.0" promptText="Large Area of Information about the establishment" style="-fx-border-color: #9fe1b1; -fx-border-width: 2px;" text="Modern university venue serving drinks" />
                           </children></TextFlow>
                        <Button fx:id="btnReturn" layoutX="23.0" layoutY="506.0" mnemonicParsing="false" onAction="#returnLogin" style="-fx-background-color: #9FE1B1;" text="&lt;" />
                     </children></AnchorPane>
            </content>
          </Tab>
          <Tab text="Deals">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="555.0" prefWidth="678.0">
                     <children>
                        <Label layoutY="14.0" text="Deals Near:">
                           <font>
                              <Font name="System Bold" size="34.0" />
                           </font>
                        </Label>
                        <TextField layoutX="183.0" layoutY="19.0" minHeight="40.0" minWidth="200.0" promptText="Location of User" />
                        <ScrollPane layoutX="5.0" layoutY="295.0" prefHeight="209.0" prefWidth="410.0">
                          <content>
                            <AnchorPane fx:id="anchDeal" minHeight="0.0" minWidth="0.0" prefHeight="205.0" prefWidth="402.0" style="-fx-border-color: #9fe1b1; -fx-border-width: 3px;">
                                 <children>
                                    <TextArea fx:id="taView" editable="false" layoutX="14.0" layoutY="10.0" prefHeight="185.0" prefWidth="374.0" wrapText="true" />
                                 </children></AnchorPane>
                          </content>
                        </ScrollPane>
                        <AnchorPane fx:id="anchDealList" layoutX="6.0" layoutY="90.0" prefHeight="138.0" prefWidth="409.0" style="-fx-border-color: #9fe1b1;">
                           <children>
                              <Label fx:id="l1" layoutX="14.0" layoutY="28.0" prefHeight="27.0" prefWidth="95.0" />
                              <Label fx:id="l2" layoutX="21.0" layoutY="90.0" prefHeight="27.0" prefWidth="94.0" />
